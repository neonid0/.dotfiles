# Define the path to your controller
set $timer_script ~/.config/i3/scripts/timer_control.sh

# Define the mode
set $mode_timetracking "⏱️ Time Tracking: (s)ociety, (m)lbnova, (i)lanpusulam, (p)arayuz, (q)uit tracking"

bindsym $mod+y mode $mode_timetracking

mode $mode_timetracking {
    # Calls the script with specific arguments (Polymorphism via args)

    # Start society
    bindsym s exec --no-startup-id $timer_script start society, mode "default"

    # Start mlbnova
    bindsym m exec --no-startup-id $timer_script start mlbnova, mode "default"

    # Start ilanpusulam
    bindsym i exec --no-startup-id $timer_script start ilanpusulam, mode "default"

    # Start parayuz
    bindsym p exec --no-startup-id $timer_script start parayuz, mode "default"

    # Stop Tracking
    bindsym q exec --no-startup-id $timer_script stop, mode "default"

    # Exit modes
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

